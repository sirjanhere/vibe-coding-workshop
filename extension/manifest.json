{
  "manifest_version": 3,
  "name": "Brain Booster â€“ Research Flashcards",
  "version": "1.0.0",
  "description": "Generate beautiful flashcards from selected academic or research text using phi3.5 via a local FastAPI backend.",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Brain Booster Flashcards"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
